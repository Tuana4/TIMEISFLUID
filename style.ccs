* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    width: 100vw;
    height: 100vh;
    overflow: hidden; /* Prevents scrolling */
    background-color: black; /* Ensures black background */
    display: flex;
    justify-content: center;
    align-items: center;
}

img {
    width: 100vw;
    height: 100vh;
    object-fit: cover; /* Makes the image cover the screen */
}
