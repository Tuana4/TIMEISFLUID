* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; /* Ensures no unexpected spacing */
}

html, body {
    width: 100vw;
    height: 100vh;
    background-color: black; /* Ensures full black background */
    overflow: hidden; /* Prevents scrolling */
    display: flex;
    justify-content: center;
    align-items: center;
}

canvas {
    display: block; /* Removes any default spacing */
    background: black; /* Ensures the canvas background is black */
}
